<Page x:Class="Wpf_View.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUp">

    <Grid>
        <Image Source="\Resource\background.jpg" Stretch="Fill">
            <Image.Effect>
                <BlurEffect Radius="8"/>
            </Image.Effect>
        </Image>

        <Border x:Name="SignUpPage" Background="DarkCyan" CornerRadius="20" Width="0" Height="0"
                Margin="0,50,0,0" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="Sing Up" FontWeight="SemiBold" FontFamily="Gabriola" FontSize="65" Foreground="White"
                           HorizontalAlignment="Center"/>

                <Border Background="#E8E8E8" Margin="30,30,30,12" CornerRadius="16,10,10,16">
                    <StackPanel Orientation="Horizontal">
                        <Border CornerRadius="14" BorderBrush="Black" BorderThickness="1.5">
                            <Image Source="\Resource\LoginPage\username.png" Height="20" Width="20" Margin="7,5"/>
                        </Border>

                        <TextBox FontSize="17" Foreground="DimGray" Background="#E8E8E8" Text="Firstname"
                                 Margin="4,5" Width="220" BorderThickness="0" GotFocus="Clear_Text"/>
                    </StackPanel>
                </Border>

                <Border Background="#E8E8E8" Margin="30,12,30,12" CornerRadius="16,10,10,16">
                    <StackPanel Orientation="Horizontal">
                        <Border CornerRadius="14" BorderBrush="Black" BorderThickness="1.5">
                            <Image Source="\Resource\LoginPage\username.png" Height="20" Width="20" Margin="7,5"/>
                        </Border>

                        <TextBox FontSize="17" Foreground="DimGray" Background="#E8E8E8" Text="Lastname"
                                 Margin="4,5" Width="220" BorderThickness="0" GotFocus="Clear_Text"/>
                    </StackPanel>
                </Border>

                <Border Background="#E8E8E8" Margin="30,12,30,12" CornerRadius="16,10,10,16">
                    <StackPanel Orientation="Horizontal">
                        <Border CornerRadius="14" BorderBrush="Black" BorderThickness="1.5">
                            <Image Source="\Resource\LoginPage\username.png" Height="20" Width="20" Margin="7,5"/>
                        </Border>

                        <TextBox FontSize="17" Foreground="DimGray" Background="#E8E8E8" Text="Username"
                                 Margin="4,5" Width="220" BorderThickness="0" GotFocus="Clear_Text"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
